@model ApartmentManagement.Invoice

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Invoice</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session)
        </dt>
        <dd class="col-sm-10">
            @Convert.ToString(string.Format("{0:MM/yyyy}", Model.Session))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Residence)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Residence)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
